{
  "name": "koa-restful-boilerplate",
  "description": "Koa 2 RESTful API boilerplate",
  "version": "1.0.0",
  "author": "Kiros Matavastros",
  "keywords": [
    "koa",
    "rest",
    "api",
    "mongodb",
    "mongoose",
    "async",
    "es6"
  ],
  "engines": {
    "node": "8.11.4"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "nodemon server/ --exec babel-node",
    "build": "babel server -d dist",
    "lint": "eslint ./server",
    "test": "npm run lint && npm run mocha",
    "prod": "npm run build && node dist/",
    "mocha": "./node_modules/.bin/mocha --compilers js:babel-register --require babel-polyfill --exit",
    "send": "nodemon server/send.js --exec babel-node"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.1.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^3.3.0",
    "koa-jwt": "^3.3.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "mongoose": "^5.0.1",
    "mongoose-timestamp": "^0.6.0",
    "nodemailer": "^4.6.8",
    "nodemailer-mandrill-transport": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-plugin-transform-async-to-generator": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^4.1.2",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^4.0.1",
    "nodemon": "^1.8.1",
    "should": "^13.1.3",
    "supertest": "^3.0.0"
  }
}
